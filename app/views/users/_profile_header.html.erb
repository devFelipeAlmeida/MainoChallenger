<div class="container border-bottom d-flex justify-content-between align-items-center" style="min-height: 20rem">
  <!-- Conteúdo do Usuário -->
  <div class="d-flex align-items-center">
    <div class="d-flex flex-column">
      <%= image_tag(user.profile_pic.attached? ? user.profile_pic : 'user-pp.png', class: "img-thumbnail rounded-circle mr-3", style: "max-width: 9rem; height: 9rem;") %>
      <% if user == current_user %>
        <%= link_to "Edit Profile", edit_user_registration_path, class: "btn bg-color mt-3" %>
      <% end %>
    </div>
    <div class="d-flex flex-column m-3">
      <p class="m-0 fw-bold blue-color"><%= user.username %></p>
      <small class="fw-bold"><%= pluralize(user.posts.count, "Post") %></small>
      <small class="fw-bold green-color"><%= user.full_name %></small>
      <small><%= user.bio %></small>
    </div>
  </div>
  <!-- Imagem do Maino -->
  <div class="d-flex align-items-center">
    <%= image_tag 'maino-logo.png', width: "250rem"%>
  </div>
</div>