<section class="vh-100 d-flex justify-content-center align-items-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "w-100" }) do |f| %>
    <div class="container-fluid h-custom">
      <div class="row">
        <div class="col-md-6">
          <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
            class="img-fluid" alt="Sample image">
        </div>
        <div class="col-md-6">
          <div class="row justify-content-center">
            <div class="col-xl-8">
              <!-- Email input -->
              <div data-mdb-input-init class="form-outline mb-4">
                <%= f.email_field :email, class: "form-control form-control-lg", placeholder: "Enter a valid email address" %>
                <%= f.label :email, "EndereÃ§o de Email", class: "form-label" %>
              </div>

              <!-- Password input -->
              <div data-mdb-input-init class="form-outline mb-3">
                <%= f.password_field :password, class: "form-control form-control-lg", placeholder: "Enter password" %>
                <%= f.label :password, 'Password', class: "form-label" %><br />
              </div>

              <div class="d-flex justify-content-between align-items-center">
                <!-- Checkbox -->
                <div class="form-check mb-0">
                  <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
                  <label class="form-check-label" for="form2Example3">
                    Remember me
                  </label>
                </div>
                <%= link_to "Forgot your password?", password_reset_path, class: "text-body" %>
              </div>

              <div class="text-center text-lg-start mt-4 pt-2">
                <%= f.submit "Login", class: "btn btn-primary btn-lg", style: "padding-left: 2.5rem; padding-right: 2.5rem;" %>
                <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? <a href="#!"
                    class="link-danger">Register</a></p>
              </div>
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</section>